@model Infrastructure.Models.ErrorViewModel;
@{
    ViewData["Title"] = "Error";
}
<div id="message-container" class="row">
    <div class="col-12 fw-bolder text-center align-self-center">
        <h1 class="text-danger">
            5<i class="fas fa-exclamation-circle"></i>0
        </h1>
        <h2 class="text-danger">Ocurrió un error al procesar su solicitud</h2>
        @if (Model.ShowRequestId)
        {
            <h6>@($"({@Model.RequestId})")</h6>
        }
        <hr />
        @if (!string.IsNullOrEmpty(Model.Message))
        {
            <h2 class="text-danger">@Model.Message</h2>
        }
        <p class="mb-md-5">
            Si continúa recibiendo este error, comuníquese con el administrador del sistema.<br />
            @{
                var email = "manuelhinojos@hotmail.com";
                var mailto = $"{email}?subject=Global Audits Support";
            }
            <a href="mailto:@mailto">
                @email
            </a>
        </p>
        <h4 class="mb-md-5">
            <a class="btn btn-primary btn-lg active" role="button" asp-controller="Home" asp-action="Index">
                Volver al Inicio
            </a>
            <a href="javascript:history.back()" class="btn btn-primary btn-lg active" role="button">
                Atrás
            </a>
        </h4>
    </div>
</div>
@section Styles{
    <style>
        h1 {
            font-size: 10rem;
        }

        #message-container {
            min-height: 720px;
        }
    </style>
}
